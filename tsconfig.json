{
  "compilerOptions": {
    /* ðŸ”¹ Modern JS output for Next.js */
    "target": "ES2022",
    "module": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    /* ðŸ”¹ Better module resolution (required for ESM + Turbopack) */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    /* ðŸ”¹ TypeScript strictness and safety */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    /* ðŸ”¹ React / JSX */
    "jsx": "preserve",
    "jsxImportSource": "react",
    /* ðŸ”¹ Interop and type helpers */
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "incremental": true,
    "noEmit": true,
    /* ðŸ”¹ Path aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@repo/ui": [
        "../../packages/ui"
      ]
    },
    /* ðŸ”¹ Next.js plugin for better editor support */
    "plugins": [
      {
        "name": "next"
      }
    ],
    "allowJs": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
